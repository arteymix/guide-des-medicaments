<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/drug_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drug 1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drug_1_name"
        android:layout_toEndOf="@id/drug_1_name"
        android:layout_alignBaseline="@id/drug_1_name"
        android:text=" with " />

    <TextView
        android:id="@+id/drug_2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/with"
        android:layout_toEndOf="@id/with"
        android:text="Drug 2"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drug_1_name"
        android:text="Description" />


    <TextView
        android:id="@+id/severity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Severity: N/A"
        android:layout_below="@id/description"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>